<UserControl x:Class="SignalrClient.Views.ExecuteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignalrClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition  />
        </Grid.RowDefinitions>

        

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label>Method name:</Label>
            <TextBox Name="MethodName" VerticalAlignment="Center" MinWidth="200"></TextBox>

        </StackPanel>

        <DataGrid Grid.Row="1" Name="Params">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="Type"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Value"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
